<%= form_with(model: @blog, local: true) do |form| %>

<div class="contents row">

  <div class="title">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="time">
    <%= form.label :日付 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :本文 %>
    <%= form.text_area :content %>
  </div>


  <div class="submit">
    <%= form.submit "カレンダーに記入" %>
  </div>
</div>
<% end %>